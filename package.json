{
	"name": "posthtml-atomizer",
	"description": "posthtml plugin to generate atomic css definitions using atomizer",
	"license": "MIT",
	"author": "Charles B Johnson <mail@cbjohnson.info> (cbjohnson.info)",
	"repository": "charlesbjohnson/posthtml-atomizer",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"check": "run-p check:*",
		"check:commit": "commitlint --from master",
		"check:lint": "xo",
		"fmt": "run-s fmt:package fmt:code",
		"fmt:code": "prettier --write **/*.js",
		"fmt:package": "prettier-package-json --write --use-tabs",
		"postinstall": "yarn-bin-fix",
		"release": "standard-version",
		"test": "jest 2>&1",
		"test:coverage": "run-s test && codecov",
		"test:debug": "node debug $(yarn --silent run test:debug:cmd)",
		"test:debug:cmd": "echo $(which jest) --collectCoverage false --runInBand",
		"test:debug:inspect": "node --inspect-brk $(yarn --silent run test:debug:cmd)"
	},
	"dependencies": {
		"atomizer": "^3.4.7",
		"joi": "^13.1.2",
		"lodash.get": "^4.4.2",
		"lodash.merge": "^4.6.1",
		"mkdirp": "^0.5.1"
	},
	"peerDependencies": {
		"posthtml": ">=0.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^6.1.3",
		"@commitlint/config-conventional": "^6.1.3",
		"codecov": "^3.0.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-jest": "^21.15.0",
		"eslint-plugin-prettier": "^2.6.0",
		"jest": "^22.4.2",
		"node": "^6.13.0",
		"npm-run-all": "^4.1.2",
		"npx": "^10.0.1",
		"posthtml": "^0.11.3",
		"prettier": "^1.11.1",
		"prettier-package-json": "^1.5.1",
		"standard-version": "^4.3.0",
		"tempy": "^0.2.1",
		"xo": "^0.20.3",
		"yarn": "^1.5.1",
		"yarn-bin-fix": "^0.1.15"
	},
	"keywords": [
		"atomic",
		"atomize",
		"atomizer",
		"css",
		"html",
		"posthtml",
		"posthtml-plugin",
		"posthtmlplugin"
	],
	"engines": {
		"node": ">=6"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"jest": {
		"collectCoverage": true,
		"coverageDirectory": "./coverage"
	},
	"prettier": {
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"xo": {
		"extends": [
			"plugin:prettier/recommended"
		],
		"overrides": [
			{
				"files": "**/*.test.js",
				"extends": [
					"plugin:jest/recommended"
				]
			}
		],
		"prettier": true,
		"rules": {
			"new-cap": [
				"error",
				{
					"capIsNew": false
				}
			],
			"import/order": [
				"error",
				{
					"groups": [
						[
							"builtin",
							"external",
							"internal"
						],
						[
							"index",
							"parent",
							"sibling"
						]
					],
					"newlines-between": "always"
				}
			]
		}
	}
}
